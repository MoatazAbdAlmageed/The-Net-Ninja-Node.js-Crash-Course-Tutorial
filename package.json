  "devDependencies": {
    "@types/node": "^14.0.14",
    "copyfiles": "^2.3.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2"
  }
}
