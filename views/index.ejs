<%- include('./partials/header.ejs') %>
<div class="row">
  <% if(blogs.length){ %> <% blogs.forEach((post) =>{ %>
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h4><%=post.title%></h4>
        <p class="card-text">
          <%=post.content%>
        </p>
      </div>
    </div>
  </div>
  <% } )%> <%} else { %>
  <p>No Posts to show</p>
  <% }%>
</div>

<%- include('./partials/footer.ejs') %>
